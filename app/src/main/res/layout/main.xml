<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DictionaryActivity">

    <Button
        android:id="@+id/btnImgCheck"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/edTxtWord"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edTxtWord"
        android:onClick="onClickCheck"
        android:text="Search"
        android:background="@color/PrimaryColor"
        android:textColor="#ffffff"
        android:padding="0dp"
         />

    <TextView
        android:id="@+id/texViewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edTxtWord"
        android:layout_below="@+id/btnImgCheck"
        android:layout_marginTop="26dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:maxLines="30"
        android:scrollbars="vertical"
        android:text="@string/txtWord"
        android:textColor="#ff666666"
        android:typeface="sans" />

    <EditText
        android:id="@+id/edTxtWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="@string/Define_Word" />

</RelativeLayout>
